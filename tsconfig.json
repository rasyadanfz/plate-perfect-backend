{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "allowImportingTsExtensions": true,
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
